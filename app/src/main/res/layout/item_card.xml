<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true"
    app:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="@string/CostView" />

        <TextView
            android:id="@+id/textViewNameItem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/item_name_menu"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"

            />

        <TextView
            android:layout_below="@+id/textViewNameItem"
            android:id="@+id/textViewDescribeItem"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:textSize="14sp"
            android:layout_marginBottom="4dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/DescribeItem"
            />

        <Button
            android:id="@+id/buttonItem"
            android:layout_width="48dp"
            android:layout_height="48dp"

            android:layout_alignBottom="@+id/textViewDescribeItem"
            android:background="@drawable/ic_add_shopping_cart_black_24dp"
            android:layout_alignRight="@+id/textViewCost"
             />


    </RelativeLayout>
</android.support.v7.widget.CardView>