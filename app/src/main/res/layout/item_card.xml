<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    app:cardCornerRadius="2dp"
    app:cardPreventCornerOverlap="true"
    app:elevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/textViewCost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp"
            android:layout_marginRight="8dp"
            android:layout_alignParentRight="true"
            android:text="@string/CostView" />

        <TextView
            android:id="@+id/textViewNameItem"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/item_name_menu"
            android:layout_marginRight="62dp"
            android:textSize="18sp"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"

            />

        <TextView
            android:layout_below="@+id/textViewNameItem"
            android:id="@+id/textViewDescribeItem"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="62dp"
            android:textSize="12sp"
            android:layout_marginBottom="4dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/DescribeItem"
            />

        <Button
            android:id="@+id/buttonItem"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:shadowRadius="3"
            android:shadowDx="2"
            android:layout_alignParentRight="true"

            android:layout_marginTop="34dp"
            android:layout_marginRight="4dp"
            android:layout_marginBottom="8dp"
            android:background="@drawable/ic_add_to_basket_e_commerce_button"

             />


    </RelativeLayout>
</android.support.v7.widget.CardView>